{
  "name": "html-to-pdf-presentation",
  "version": "2.0.0",
  "description": "Professional HTML to PDF conversion with perfect preservation",
  "main": "server/app.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/app.js",
    "client": "live-server client/ --port=8080 --host=localhost",
    "build": "npm run build:server",
    "build:server": "node server/build.js",
    "start": "node server/app.js",
    "test": "jest",
    "lint": "eslint server/ client/"
  },
  "dependencies": {
    "@types/node": "^24.0.13",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.1",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^21.5.2",
    "sharp": "^0.32.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
